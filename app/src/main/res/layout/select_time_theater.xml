<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/btnshape_blue"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTheaterName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/icons8_heart_24"
            android:drawablePadding="10dp"
            android:text="PVR: Inorbit, Cyberabad"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvDate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMovieTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tvShowTime1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btnshape"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="12:30 PM"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="3dp"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tvShowTime2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btnshape"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="3:00 PM"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold" />



        <TextView
            android:layout_weight="1"
            android:id="@+id/tvShowTime3"
            android:layout_width="0dp"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/btnshape"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="3:00 PM"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp" />

</LinearLayout>
